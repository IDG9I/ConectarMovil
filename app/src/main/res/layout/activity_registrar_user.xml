<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarUser">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="63dp"
        android:layout_height="63dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:srcCompat="@drawable/pngegg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="36dp"
        android:text="ConectaMóvil"
        android:textAlignment="center"
        android:textColor="@color/Naranjo"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="83dp"
        android:text="Se parte de ConectaMovil!!"
        android:textAlignment="center"
        android:textColor="@color/Naranjo2"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtCreacionUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="97dp"
        android:backgroundTint="@color/Naranjo"
        android:ems="10"
        android:hint="Nombre Usuario"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/Naranjo"
        android:textColorHint="@color/NaranjoH"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="97dp"
        android:backgroundTint="@color/Naranjo"
        android:ems="10"
        android:hint="Correo Electronico"
        android:inputType="text|textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/Naranjo"
        android:textColorHint="@color/NaranjoH"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCreacionUsuario" />

    <Button
        android:id="@+id/btnRegistrarUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="119dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/Naranjo2"
        android:paddingVertical="10dp"
        android:text="Crear Usuario"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContraseñaConfirR" />

    <EditText
        android:id="@+id/txtContraseñaR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/Naranjo"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/Naranjo"
        android:textColorHint="@color/NaranjoH"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefono" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="97dp"
        android:backgroundTint="@color/Naranjo"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/Naranjo"
        android:textColorHint="@color/NaranjoH"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreo" />

    <EditText
        android:id="@+id/txtContraseñaConfirR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="99dp"
        android:backgroundTint="@color/Naranjo"
        android:ems="10"
        android:hint="Confirmar Contraseña"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/Naranjo"
        android:textColorHint="@color/NaranjoH"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContraseñaR" />

</androidx.constraintlayout.widget.ConstraintLayout>